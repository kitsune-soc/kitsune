{
	"endOfLine": "lf",
	"importOrder": ["^\\w", "^[./|~/]"],
	"importOrderSeparation": true,
	"importOrderParserPlugins": ["typescript"],
	"semi": true,
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-css-order",
		"prettier-plugin-svelte"
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
